@model SchoolManagement.Models.Students

@{
    ViewData["Title"] = "Edit Student";
}

<div class="container mt-4">
    <h2 class="text-center">Edit Student</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 shadow-lg rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfileImage))
            {
                <img src="~/images/@Model.ProfileImage" alt="Profile Image" class="rounded-circle" width="100" height="100" />
            }
            else
            {
                <span>No Image</span>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Student Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FatherName" class="form-label">Father's Name</label>
            <input asp-for="FatherName" class="form-control" required />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Standard" class="form-label">Select Class</label>
            <select asp-for="Standard" class="form-select" required>
                <option value="">-- Select Class --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == Model.Standard)">@i</option>
                }
            </select>
            <span asp-validation-for="Standard" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Update Profile Image</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-success w-100">Update</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
